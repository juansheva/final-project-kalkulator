<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:singleLine="true"
        android:ellipsize="start">
    </TextView>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBersihkan"
                style="@style/ButtonStyle"
                android:text="CE"></TextView>
            <TextView
                android:id="@+id/tvBuka"
                style="@style/ButtonStyle"
                android:text="("></TextView>
            <TextView
                android:id="@+id/tvTutup"
                style="@style/ButtonStyle"
                android:text=")"></TextView>
            <TextView
                android:id="@+id/tvKali"
                style="@style/ButtonStyle"
                android:text="X"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTujuh"
                style="@style/ButtonStyle"
                android:text="7"></TextView>
            <TextView
                android:id="@+id/tvDelapan"
                style="@style/ButtonStyle"
                android:text="8"></TextView>
            <TextView
                android:id="@+id/tvSembilan"
                style="@style/ButtonStyle"
                android:text="9"></TextView>
            <TextView
                android:id="@+id/tvBagi"
                style="@style/ButtonStyle"
                android:text="/"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEmpat"
                style="@style/ButtonStyle"
                android:text="4"></TextView>
            <TextView
                android:id="@+id/tvLima"
                style="@style/ButtonStyle"
                android:text="5"></TextView>
            <TextView
                android:id="@+id/tvEnam"
                style="@style/ButtonStyle"
                android:text="6"></TextView>
            <TextView
                android:id="@+id/tvKurang"
                style="@style/ButtonStyle"
                android:text="-"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSatu"
                style="@style/ButtonStyle"
                android:text="1"></TextView>
            <TextView
                android:id="@+id/tvDua"
                style="@style/ButtonStyle"
                android:text="2"></TextView>
            <TextView
                android:id="@+id/tvTiga"
                style="@style/ButtonStyle"
                android:text="3"></TextView>
            <TextView
                android:id="@+id/tvTambah"
                style="@style/ButtonStyle"
                android:text="+"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTitik"
                style="@style/ButtonStyle"
                android:text="."></TextView>
            <TextView
                android:id="@+id/tvNol"
                style="@style/ButtonStyle"
                android:text="0"></TextView>
            <ImageView
                android:id="@+id/tvHapus"
                style="@style/ButtonStyle"
                android:src="@drawable/outline_backspace_black_24dp"
                android:scaleType="center"></ImageView>
            <TextView
                android:id="@+id/tvHasil"
                style="@style/ButtonStyle"
                android:text="="></TextView>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>